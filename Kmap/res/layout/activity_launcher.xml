<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Launcher" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical" >
        
        <TextView 
            android:id="@+id/varNamesActual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:gravity="center_horizontal"/>
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <GridView
	            android:id="@+id/varNames"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="#eee">

        	</GridView>

            <GridView
	            android:id="@+id/gridTop"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="#eee">

        	</GridView>
            
        </LinearLayout>

        
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/GridViewHolder">
	        
            <GridView
                android:id="@+id/gridLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#eee"
                android:numColumns="1">
                
            </GridView>
            
		    <com.arawind.kmap.KmapGridView
		        android:id="@+id/gridTable"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:numColumns="3" >

		    </com.arawind.kmap.KmapGridView> 
		    
		    <com.arawind.kmap.KmapGridView
		        android:id="@+id/gridTable5"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:numColumns="4"
		        android:visibility="gone" >

		    </com.arawind.kmap.KmapGridView> 
	
	    </LinearLayout>
	    <Button 
	        android:id="@+id/extender5"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:maxLines="1"
	        android:visibility="gone"/>
	    <Spinner 
	        android:id="@+id/colorWheel"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"/>
    </LinearLayout>
    

</RelativeLayout>
